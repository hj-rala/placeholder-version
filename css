input::placeholder {color:#a8a8a8 !important;opacity: 1;}/* IE10 이상을 위한 css */
input::-webkit-input-placeholder {color:#a8a8a8 !important;}/* WebKit, Blink, Edge */
input:-ms-input-placeholder {color:#a8a8a8 !important;}/* IE */
input:-mos-input-placeholder {color:#a8a8a8 !important;}/* Firefox */
textarea::placeholder {color: #a8a8a8 !important;opacity: 1;}/* IE10 이상을 위한 css */
textarea::-webkit-input-placeholder {color: #a8a8a8 !important;}/* WebKit, Blink, Edge */
textarea:-ms-input-placeholder {color: #a8a8a8 !important;}/* IE */
textarea:-mos-input-placeholder {color: #a8a8a8 !important;}/* Firefox */
